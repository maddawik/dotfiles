     "glow"
     "go"
     "granted"
     "hub"
     "imagemagick"
     "jless"
     "jq"
     "pinentry-mac"
     "presenterm"
     "rip2"
     "ripgrep"
     "tealdeer"
     "tmux"
     "uv"
     "vivid"
     "wget"
     "yamllint"
     "yazi"
     "zig"
     "felixkratz/formulae/sketchybar" -}}
{{ $casks := list
     "1password"
     "1password-cli"
     "betterdisplay"
     "docker"
     "firefox"
     "font-hack-nerd-font"
     "font-jetbrains-mono"
     "ghostty"
     "obsidian"
     "raycast"
