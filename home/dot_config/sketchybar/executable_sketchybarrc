# This is a demo config to showcase some of the most important commands.
# It is meant to be changed and configured, as it is intentionally kept sparse.
# For a (much) more advanced configuration example see my dotfiles:
# https://github.com/FelixKratz/dotfiles

PLUGIN_DIR="$CONFIG_DIR/plugins"

##### Bar Appearance #####
sketchybar --bar \
  position=top \
  height=33 \
  blur_radius=15 \
  color=0x40232136

##### Changing Defaults #####
default=(
  padding_left=5
  padding_right=5
  icon.font="Hack Nerd Font:Bold:18.0"
  label.font="Hack Nerd Font:Bold:16.0"
  icon.color=0xffe0def4
  label.color=0xffe0def4
  icon.padding_left=2
  icon.padding_right=4
  label.padding_left=2
  label.padding_right=2
)
sketchybar --default "${default[@]}"

##### Adding Left Items #####

# Aerospace
sketchybar --add event aerospace_workspace_change
for sid in $(aerospace list-workspaces --all | sort -n); do
  sketchybar --add item space.$sid left \
    --subscribe space.$sid aerospace_workspace_change \
    --set space.$sid \
    background.color=0x40908caa \
    background.corner_radius=5 \
    background.height=25 \
    background.drawing=off \
    icon="$sid" \
    icon.padding_left=7 \
    icon.padding_right=7 \
    click_script="aerospace workspace $sid" \
    script="$PLUGIN_DIR/aerospace.sh $sid"
done

sketchybar --add item front_app left \
  --set front_app icon.drawing=off script="$PLUGIN_DIR/front_app.sh" \
  --subscribe front_app front_app_switched

##### Adding Right Items #####

PILL_COLOR=0x40908caa
PILL_RADIUS=8
PILL_HEIGHT=25
GAP_WIDTH=10

# Battery present? (desktop-safe)
HAS_BATTERY=1
pmset -g batt 2>/dev/null | grep -q "No battery" && HAS_BATTERY=0

# Clock + Volume (no pill)
sketchybar \
  --add item clock right \
  --set clock update_freq=10 icon= script="$PLUGIN_DIR/clock.sh" \
  --add item spacer_1 right \
  --set spacer_1 width=$GAP_WIDTH background.drawing=off icon.drawing=off label.drawing=off \
  --add item volume right \
  --set volume script="$PLUGIN_DIR/volume.sh" \
  --subscribe volume volume_change \
  --add item spacer_2 right \
  --set spacer_2 width=$GAP_WIDTH background.drawing=off icon.drawing=off label.drawing=off \
  --add item cpu right \
  --set cpu update_freq=2 icon= script="$PLUGIN_DIR/cpu.sh" click_script="open -a 'Activity Monitor'" \
  --add item memory right \
  --set memory update_freq=2 icon=󰍛 script="$PLUGIN_DIR/memory.sh" click_script="open -a 'Activity Monitor'"

# If battery exists, add it (no blank space on desktops)
if [ "$HAS_BATTERY" -eq 1 ]; then
  sketchybar --add item battery right \
    --set battery update_freq=120 script="$PLUGIN_DIR/battery.sh" \
    --subscribe battery system_woke power_source_change
fi

# Force order: CPU/MEM/BATTERY
if [ "$HAS_BATTERY" -eq 1 ]; then
  sketchybar --reorder clock spacer_1 volume spacer_2 cpu memory battery
else
  sketchybar --reorder clock spacer_1 volume spacer_2 cpu memory
fi

# One pill for CPU/MEM/BATTERY
if [ "$HAS_BATTERY" -eq 1 ]; then
  sketchybar --add bracket sys_group cpu memory battery
else
  sketchybar --add bracket sys_group cpu memory
fi

sketchybar --set sys_group \
  background.drawing=on \
  background.color=$PILL_COLOR \
  background.corner_radius=$PILL_RADIUS \
  background.height=$PILL_HEIGHT

# Pill draws background, not the items
sketchybar --set cpu background.drawing=off \
  memory background.drawing=off
[ "$HAS_BATTERY" -eq 1 ] && sketchybar --set battery background.drawing=off

##### Force all scripts to run the first time #####
sketchybar --update
